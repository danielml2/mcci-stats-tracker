{
  "schemaVersion": 1,
  "id": "mcci-stats-tracker",
  "version": "${version}",

  "name": "MCCI Stats Tracker",
  "description": "A mod to track your personal in-game statistics on the MCC Island server",
  "authors": [
    "danielml2/Offlical"
  ],
  "contact": {
    "homepage": "https://modrinth.com/mod/mcci-stats-tracker",
    "sources": "https://github.com/danielml2/mcci-stats-tracker"
  },

  "license": "MIT",
  "icon": "assets/mcci-stats-tracker/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "me.danielml.MCCIStats"
    ],
    "modmenu": [
      "me.danielml.config.MCCIStatsModMenuHook"
    ]
  },
  "mixins": [
    "mcci-stats-tracker.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.14.19",
    "fabric-api": "*",
    "minecraft": "~1.20.1",
    "java": ">=17",
    "yet_another_config_lib_v3": "*"
  },
  "custom": {
    "modmenu": {
      "update_checker": true
    }
  }
}
